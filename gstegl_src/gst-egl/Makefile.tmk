ifdef NV_COMPONENT_FLAG_SHARED_LIBRARY_SECTION
include $(NV_BUILD_START_COMPONENT)

_source_dir                          := $(NV_SOURCE)/3rdparty/gst/gst-nveglglessink
include $(NV_SOURCE)/3rdparty/gst/gst-v4l2/Makefile.gstreamer-1.0_common.tmk

ifeq ($(NV_TARGET_ARCH),l4t_64)
	_private_source_dir                       := $(_source_dir)/.nvtegra/pre-gen-source_64
else
	_private_source_dir                       := $(_source_dir)/.nvtegra/pre-gen-source
endif


NV_COMPONENT_NAME                    := gstnveglglessink

NV_COMPONENT_SOURCES                 := \
	$(_source_dir)/ext/eglgles/gstegladaptation.c \
	$(_source_dir)/ext/eglgles/gstegladaptation_egl.c \
	$(_source_dir)/ext/eglgles/gsteglglessink.c \
	$(_source_dir)/ext/eglgles/gstegljitter.c \
	$(_source_dir)/ext/eglgles/video_platform_wrapper.c

NV_COMPONENT_OWN_INTERFACE_DIR       := .

NV_COMPONENT_INCLUDES                += \
	$(_private_source_dir) \
	$(_source_dir)/gst-libs \
	$(NV_SOURCE)/nvutils/nvbufsurface/

NV_COMPONENT_NEEDED_INTERFACE_DIRS   += \
        $(NV_INTERFACE_GPU_GRAPHICS_EGL) \
        $(NV_INTERFACE_GPU_GRAPHICS_OPENGLES2) \
        $(NV_SOURCE)/3rdparty/gst/gst-nveglglessink/gst-libs/gst/egl \
        $(NV_SOURCE)/gpu/drv/drivers/unix/dso-stubs/wayland/libwayland-dso-stubs/wayland-client \
        $(NV_SOURCE)/gpu/drv/drivers/unix/dso-stubs/wayland/libwayland-dso-stubs/wayland-egl \
        $(NV_SOURCE)/l4t/3rdpartystub/glib-2.0 \
        $(NV_SOURCE)/l4t/3rdpartystub/gobject-2.0 \
        $(NV_SOURCE)/l4t/3rdpartystub/gstbase-1.0 \
        $(NV_SOURCE)/l4t/3rdpartystub/gstreamer-1.0 \
        $(NV_SOURCE)/l4t/3rdpartystub/gstvideo-1.0 \
        $(NV_SOURCE)/l4t/3rdpartystub/X11

NV_COMPONENT_CFLAGS                  += \
	$(NV_TOOLCHAIN_X11_CFLAGS) \
	-DHAVE_CONFIG_H -DG_THREADS_MANDATORY -DG_DISABLE_DEPRECATED -DUSE_EGL_TEGRA

NV_COMPONENT_CFLAGS                  += \
	-DUSE_EGL_WAYLAND \
	-I$(NV_TOOLS)/embedded/external-prebuilt/wayland-1.8.0/Linux-aarch64/include

NV_COMPONENT_SYSTEMIMAGE_DIR         := $(NV_SYSTEMIMAGE_GSTREAMER_DIR)/gstreamer-1.0

NV_COMPONENT_CUDA_TOOLKIT_OPTIONS_BOARD_AGNOSTIC := 1
include $(NV_BUILD_FRAGMENT_CUDA)
include $(NV_BUILD_SHARED_LIBRARY)
endif

